{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": ["packages/core", "packages/shared", "apps/cli"],
  "entryPointStrategy": "packages",
  "out": "docs/api",
  "plugin": ["typedoc-plugin-markdown"],
  "readme": "README.md",
  "navigationLinks": {
    "GitHub": "https://github.com/iamthegreatdestroyer/NLCI"
  },
  "includeVersion": true,
  "excludeExternals": true,
  "excludePrivate": false,
  "excludeProtected": false,
  "excludeInternal": false,
  "categorizeByGroup": true,
  "sort": ["source-order"],
  "gitRevision": "main",
  "githubPages": false,
  "cleanOutputDir": true,
  "hideGenerator": false,
  "searchInComments": true,
  "searchInDocuments": true
}
