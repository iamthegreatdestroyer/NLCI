#!/bin/bash
# Pre-commit hook for NLCI
# Prevents commits with failing tests, linting issues, or type errors

set -e

echo "ğŸ” Running pre-commit checks..."

# Check for staged changes
if git diff --cached --quiet; then
  echo "âœ… No changes to commit"
  exit 0
fi

# Get staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx|js|jsx)$' || true)

if [ -z "$STAGED_FILES" ]; then
  echo "âœ… No JavaScript/TypeScript files to check"
  exit 0
fi

echo "ğŸ“ Checking files: $(echo $STAGED_FILES | wc -w) files"

# Run linting
echo "ğŸ”§ Linting..."
if ! pnpm lint:staged $STAGED_FILES; then
  echo "âŒ Linting failed. Fix issues and try again."
  exit 1
fi

# Run type checking
echo "ğŸ“Š Type checking..."
if ! pnpm typecheck; then
  echo "âŒ Type check failed. Fix issues and try again."
  exit 1
fi

# Run unit tests for changed files
echo "ğŸ§ª Running unit tests..."
if ! pnpm test -- $STAGED_FILES; then
  echo "âŒ Tests failed. Fix issues and try again."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
exit 0
